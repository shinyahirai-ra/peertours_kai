<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: "horizontal_form", :html => { :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br>
    <% if session["devise.facebook_data"] %>
      <%= f.text_field :name, value: session["devise.facebook_data"]["info"]["name"] %>
    <% else %>
      <%= f.text_field :name %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <% if session["devise.facebook_data"] %>
      <%= f.text_field :email, value: session["devise.facebook_data"]["info"]["email"] %>
    <% else %>
      <%= f.text_field :email %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :user_image %><br>
    <%= f.fields_for :user_image, resource.build_user_image do |user_image_form| %>
      <%= user_image_form.file_field :image %>
      <%= image_tag @user.user_image.image.thumb.url if @user.user_image.present? %>
      <!-- DBに保存されていない場合のみ表示 = 更新時のみ表示 -->
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
 
  <% if session["devise.facebook_data"] %>
    <%= f.hidden_field :provider, value: session["devise.facebook_data"]["provider"] %>
    <%= f.hidden_field :uid, value: session["devise.facebook_data"]["uid"] %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>


<%= render "devise/shared/links" %>
