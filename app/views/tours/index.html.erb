<h1>Listing tours</h1>

<%= page_entries_info @tours %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Area</th>
      <th>number_of_people</th>
      <th>meeting_place</th>
      <th>price</th>
      <th>time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.title %></td>
        <td><%= tour.area.name %></td>
        <td><%= tour.number_of_people %></td>
        <td><%= tour.meeting_place %></td>
        <td><%= tour.price %></td>
        <td><%= tour.time %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tour', new_tour_path %>

<br>

<%= paginate @tours %>
